
<style>
  .vertical-center {
    alaign-items: center;
  }
    .jumbotron{
      padding: 10%;
      background-color: #2E2F30;
      color:white;
      border-radius: 20px;
    }
</style>


<p id="notice"><%= notice %></p>



<div class="container">
  <div class="page-header">
    <h1>The muchtodo Todolistlist       <%= link_to('New List', new_todolist_path , :class => 'btn btn-large btn-success') %>
    </h1>
  </div>
</div>


<div class="row vertical-center col-lg-offset-1 col-md-offset-1 col-sm-offset-1 col-xs-offset-1">

  <% @todolists.each do |todolist| %>

      <div class="col-lg-4 col-md-6 col-sm-8 col-xs-10">
        <div class="clearfix visible-sm"></div>
        <div class="jumbotron">
          <h2><%= todolist.list_title %></h2>
          <ol>
          <% todolist.todoitems.each do |todoinctance| %>
            <li><%= todoinctance.item %></li><br>
          <% end %>
          </ol>
          <p>

          <%= link_to('Show', todolist, :class => 'btn btn-large btn-primary') %>
          <%= link_to('Edit', edit_todolist_path(todolist), :class => 'btn btn-large btn-default') %>
          <%= link_to('Delete', todolist, :class => 'btn btn-large btn-danger', method: :delete, data: { confirm: 'Are you sure?' }) %>


          </p>
        </div>
      </div>

  <% end %>


</div>


<br>

